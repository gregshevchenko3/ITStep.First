@model ITStep.First.Models.LoginModel
<div class="main-wrapper">
    <article class="blog-post px-3 py-5 p-md-5">
        <div class="container">
            <div class="blog-post-body row justify-content-center col-md-12">
                <div class="col-md-12">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                        <div class="card-body">
                            <form method="post" asp-controller="Auth" asp-action="Login" asp-anti-forgery="true">
                                <div class="alert-danger validation" asp-validation-summary="ModelOnly"></div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" asp-for="Username" placeholder="Username" />
                                    <label asp-for="Username">Email address or username</label>
                                    <span class="alert-danger" asp-validation-for="Username" />
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" asp-for="Password" type="password" placeholder="Password" />
                                    <label asp-for="Password">Password</label>
                                    <span class="alert-danger" asp-validation-for="Password" />
                                </div>
                                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                    @*<a class="small" href="password.html">Forgot Password?</a>*@
                                    <button class="btn btn-primary" type="submit">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
</div>
@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
